<header>
  <h1><%= h1 %></h1>
  <nav>
    <a href="/"> Inicio </a>
    <a href="/about"> About</a>
    <a href="/contacto">Contacto</a>
    <a href="/upload/form">Upload</a>
    <a href="/productos"> Productos</a>
    <a href="/usuarios">Usuarios</a>

    <% if(session && session.userId){ %>
      <!-- Usuario logueado -->
      <a href="/productos/create">+ Nuevo Producto</a>
      <a href="/usuarios/create">+ Nuevo Usuario</a>
      <span style="margin: 0 10px; color: #333;">
        Hola, <%= session.userName %>!
        
        <!--  si es admin -->
        <% if (session.userRol === 'admin') { %>
          
          <span style="background: #dc3545; color: white; padding: 2px 8px; border-radius: 5px; border: none; cursor: pointer;">
            ADMIN
          </span>
          <% } %>
        </span>

      <form action="/auth/logout" method="POST" style="display: inline;">
        <button type="submit" style="background: #dc3545; color: white; padding: 5px 10px; border: none; border-radius: 8px;">
            Cerrar Sesi√≥n
        </button>
      </form>
      
    <% } else {%>
      <!-- Usuario no Logueado -->
      <a href="/auth/login"> Login </a>
      <a href="/auth/register"> Registrate </a> 
    <% } %>


  </nav>
  <hr />
</header>
